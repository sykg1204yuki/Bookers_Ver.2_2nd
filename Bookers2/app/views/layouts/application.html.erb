<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><strong>Bookers</strong></a>

          <button class="navbar-toggler"
                  type="button"
                  data-toggle="collapse"
                  data-target="#navbarNavDropdown"
                  aria-controls="navbarNavDropdown"
                  aria-expanded="false"
                  aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to ' Home', user_path(current_user), class:"nav-link fas fa-home text-white" %>
                </li>
                <li>
                  <%= link_to ' Users', users_path, class:"nav-link fas fa-users text-white" %>
                </li>
                <li>
                  <%= link_to ' Books', books_path, class:"nav-link fas fa-book-open text-white" %>
                </li>
                <li>
                  <%= link_to ' logout', destroy_user_session_path, method: :delete,
                      class:"nav-link fas fa-sign-out-alt text-white" %>
                  <!--ログアウトの場合は、user_session_path関連のルーティングを確認-->
                </li>
              <% else %>
                <li>
                  <%= link_to ' Home', root_path, class:"nav-link fas fa-home text-white" %>
                </li>
                <li>
                  <%= link_to ' About', home_about_path, class:"nav-link fas fa-link text-white" %>
                </li>
                <li>
                  <%= link_to ' Sign up', new_user_registration_path, class:"nav-link fas fa-user-plus text-white" %>
                </li>
                <li>
                  <%= link_to ' login', new_user_session_path, class:"nav-link fas fa-sign-in-alt text-white" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer class="w-100 text-center py-4">
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
