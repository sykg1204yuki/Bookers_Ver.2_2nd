<div class="container mt-3">
  <div class="row">
    <div class="col-md-12">
      <h2><strong>Follow Users</strong></h2>
      <% if @users.exists? %>
        <table class="table table-white">
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, format:"jpeg", fallback:"no_image.jpg", size:"50x50" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <p>フォロー数：<%= user.followings.count %></p>
            </td>
            <td>
              <p>フォロワー数：<%= user.followers.count %></p>
            </td>
            <td>
              <%= link_to 'Show', user_path(user.id) %>
            </td>
          </tr>
          <% end %>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>