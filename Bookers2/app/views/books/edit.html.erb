<div class="container my-3">
  <div class="row">
    <div class="col-md-10 offset-2">
      <h1><strong>Editing Book</strong></h1>

      <% if @book.errors.any? %>
      <p><%= @book.errors.count %>error prohibited this obj from being saved:</p>
        <% @book.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      <% end %>

      <%= form_with model:@book, local: true do |f| %>
         <h4 class="mt-2">Title</h4>
        <%= f.text_field :title, class:"w-75" %>
        <h4 class="mt-2">Opinion</h4>
        <%= f.text_area :body, class:"w-75" %><br/>
        <%= f.submit 'Update Book', class:"mt-3 btn btn-success" %><br/>
        <div class="link mt-3">
          <%= link_to 'Show', book_path(@book.id) %>
          |
          <%= link_to 'Back', books_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>




