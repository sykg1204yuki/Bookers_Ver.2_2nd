<% if flash[:notice] %>
<section class="notification">
  <p><%= flash[:notice] %></p>
</section>
<% end %>

<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>

      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2><strong>Books</strong></h2>
      <table class="container table table-white">
        <tr>
          <th></th>
          <th><h4><strong>Title</strong></h4></th>
          <th><h4><strong>Opinion</strong></h4></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :profile_image, format:"jpeg",
                  fallback:"no_image.jpg", size:"60x60" %>
            <% end %>
          </td> <!--プロフィール画像挿入 attachment_image_tag... -->
          <td><%=link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>