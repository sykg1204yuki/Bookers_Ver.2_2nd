<div class="container my-3">
  <div class="row">
    <div class="col-md-10 offset-2">
      <h1><strong>User info</strong></h1>

      <% if @user.errors.any? %>
      <p><%= @user.errors.count %>error prohibited this obj from being saved:</p>
        <% @user.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      <% end %>

      <%= form_with model:@user, local: true do |f| %>
         <h4 class="mt-2">Name</h4>
        <%= f.text_field :name, autofocus:true, class:"w-75" %>

        <h4 class="mt-2">Image</h4>
        <%= f.attachment_field :profile_image, placehoder:"プロフィール画像" %>

        <h4 class="mt-2">Introduction</h4>
        <%= f.text_area :introduction, autofocus:true, class:"w-75" %><br/>
        <%= f.submit 'Update User', class:"mt-2 btn btn-secondary" %>

      <% end %>
    </div>
  </div>
</div>
